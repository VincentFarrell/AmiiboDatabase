<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/idBreak3"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/info_headID"
        android:layout_alignBottom="@+id/info_headID"
        android:layout_toEndOf="@+id/info_headID"
        android:text="/"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/info_auRelease"
        android:layout_toEndOf="@+id/idBreak"
        android:scaleType="fitCenter"
        android:text="Image" />

    <TextView
        android:id="@+id/info_amiiboName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/info_image"
        android:layout_toEndOf="@+id/info_image"
        android:text="Name"
        android:textColor="@color/colorAccent"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/info_gameSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_amiiboSeries"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/info_image"
        android:text="game"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/info_amiiboSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_character"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/info_image"
        android:text="amiiboseries"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/info_headID"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_image"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/info_image"
        android:text="HeadID"
        android:textColor="@android:color/black"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/info_tailID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idBreak3"
        android:layout_alignBottom="@+id/idBreak3"
        android:layout_toEndOf="@+id/idBreak3"
        android:text="TailID"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/info_euRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/info_naRelease"
        android:layout_below="@+id/flagau"
        android:text="eu"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/info_jpRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/info_euRelease"
        android:layout_below="@+id/flageu"
        android:text="jp"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/info_naRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Release"
        android:layout_below="@+id/flagjp"
        android:text="na"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/info_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_amiiboName"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/info_image"
        android:text="character"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/addAmiibo_Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/flagjp"
        android:layout_toEndOf="@+id/info_image"
        android:background="@drawable/load_icon" />

    <Button
        android:id="@+id/deleteAmiibo_button"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/addAmiibo_Button"
        android:layout_toEndOf="@+id/addAmiibo_Button"
        android:background="@drawable/delete_icon" />

    <ImageView
        android:id="@+id/flagau"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/info_image"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/info_type"
        app:srcCompat="@drawable/au_flag" />

    <ImageView
        android:id="@+id/flageu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/flagau"
        android:layout_below="@+id/flagau"
        app:srcCompat="@drawable/eu_flag" />

    <ImageView
        android:id="@+id/flagjp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/flageu"
        android:layout_below="@+id/flageu"
        app:srcCompat="@drawable/jp_flag" />

    <ImageView
        android:id="@+id/flagna"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/flagjp"
        android:layout_below="@+id/flagjp"
        app:srcCompat="@drawable/na_flag" />

    <TextView
        android:id="@+id/Release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_type2"
        android:layout_toEndOf="@+id/info_auRelease"
        android:text="Amiibo Type"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/release2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/flagau"
        android:layout_below="@+id/info_image"
        android:text="Release Date" />

    <TextView
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_amiiboName"
        android:layout_toEndOf="@+id/info_image"
        android:text="Character"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/info_type2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addAmiibo_Button"
        android:layout_alignParentStart="true"
        android:text="type"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/info_auRelease3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Release"
        android:layout_alignTop="@+id/flagau"
        android:text="au"
        android:textColor="@android:color/black"
        android:textSize="14dp" />
</android.widget.RelativeLayout>