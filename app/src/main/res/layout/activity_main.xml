<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop2"
    tools:context="ie.wit.a20076447.amiibodatabase.MainActivity">


    <Button
        android:id="@+id/button_listAmiibos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pipe_button"
        android:fontFamily="sans-serif"
        android:text="Show Amiibos"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/amiibo_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actionBar"
        app:srcCompat="@drawable/amiibo_logo" />

    <ImageView
        android:id="@+id/button_art"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/button_listAmiibos"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        app:srcCompat="@drawable/mario_art"
        android:clickable="true" />

    <Button
        android:id="@+id/myAmiibos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amiibo_logo"
        android:layout_centerHorizontal="true"
        android:text="Button" />


</android.widget.RelativeLayout>
